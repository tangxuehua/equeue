@model EQueue.AdminWeb.Models.SetQueueNextConsumeOffsetViewModel
@{
    ViewBag.Title = "设置队列消费进度";
}
<div>
    @using (Html.BeginForm("SetQueueNextConsumeOffset", "Home", new { clusterName = ViewBag.ClusterName }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group">
            <label class="col-sm-2 control-label" for="ConsumerGroup">ClusterName：</label>
            <div class="col-sm-10">
                <label class="form-control">@ViewBag.ClusterName</label>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="ConsumerGroup">ConsumerGroup：</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.ConsumerGroup, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="Topic">Topic：</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Topic, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="QueueId">QueueId：</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.QueueId, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="NextOffset">NextOffset：</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.NextOffset, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-default">提交</button><label style="margin-left: 15px">（提示：提交后将设置当前集群内所有Broker上该队列的消费进度）</label>
            </div>
        </div>
    }
</div>
